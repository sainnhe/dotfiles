pkgname=hardware-meta
pkgdesc='Meta package to install hardware components'
pkgver=2025.02.16
pkgrel=1
arch=(any)
url='https://www.sainnhe.dev/'
provides=("${pkgname}")
conflicts=("${pkgname}")
install="${pkgname}.install"
depends=(# AMD GPU Drivers
         mesa
         vulkan-radeon
         vulkan-mesa-layers
         opencl-rusticl-mesa
         lib32-mesa
         lib32-vulkan-radeon
         lib32-vulkan-mesa-layers
         lib32-opencl-rusticl-mesa
         # Nvidia GPU Drivers
         nvidia
         nvidia-utils
         opencl-nvidia
         lib32-nvidia-utils
         lib32-opencl-nvidia
         lib32-libglvnd
         # GPU Controller & Monitor
         lact
         nvtop
         radeontop
         mesa-utils
         vulkan-tools
         clinfo
         libva-utils
         vdpauinfo
         nvidia-settings
         # CPU Microcode Update
         amd-ucode
         intel-ucode
         # Dependencies
         xdg-desktop-portal
         lib32-systemd
         )

pkgver() {
    date --utc +"%Y.%m.%d"
}
