{
    "$schema": "https://opencode.ai/config.json",
    "autoupdate": false,
    "theme": "everforest",
    "plugin": [
        "@franlol/opencode-md-table-formatter@latest",
        "@tarquinen/opencode-dcp@latest",
        "cc-safety-net@latest"
    ],
    "permission": {
        "*": "allow",
        "edit": "ask",
        "bash": "ask",
        "external_directory": "ask",
        "doom_loop": "ask",
        "read": {
            "*": "allow",
            "*.crt": "deny",
            "*.key": "deny",
            "*.pem": "deny",
            "*.env": "deny",
            "*.env.*": "deny",
            "*.env.example": "allow"
        }
    },
    "agent": {
        "plan": {
            "disable": true
        },
        "chat": {
            "description": "General chat agent.",
            "mode": "primary",
            "temperature": 0.7,
            "top_p": 0.9,
            "permission": {
                "*": "deny"
            },
            "prompt": "You are a smart, efficient AI assistant.\n\n**Core Guidelines:**\n1.  **Conciseness is Key:** Optimize your answers for a mobile screen. Be direct and avoid fluff.\n2.  **Format:** Use Markdown (Bold, Bullet points, Headers) heavily to make text scannable.\n3.  **Language:** Always reply in the language the user speaks (e.g., if User speaks Chinese, reply in Chinese).\n4.  **Accuracy:** If you don't know the answer, admit it. Do not hallucinate.\n\n**Capabilities:**\n- If asked to write code: Provide the code block immediately with a very brief explanation.\n- If asked for a plan: Use a numbered list.\n- If chatting: Be friendly but professional."
        }
    },
    "enabled_providers": [
        "github-copilot",
        "google",
        "custom-tencent-cloud",
        "custom-modelscope",
        "custom-local"
    ],
    "provider": {
        "custom-local": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Local",
            "options": {
                "baseURL": "http://0.0.0.0:8081/v1"
            },
            "models": {
                "local/qwen3.5": {
                    "id": "Qwen/Qwen3.5-35B-A3B",
                    "name": "Qwen3.5",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true
                },
                "local/seed-coder": {
                    "id": "ByteDance-Seed/Seed-Coder-8B-Reasoning",
                    "name": "Seed Coder",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true
                },
                "local/seed-oss": {
                    "id": "ByteDance-Seed/Seed-OSS-36B-Instruct",
                    "name": "Seed OSS",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true
                },
                "local/glm4.7-flash": {
                    "id": "zai-org/GLM-4.7-Flash",
                    "name": "GLM 4.7 Flash",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true
                }
            }
        },
        "custom-tencent-cloud": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Tencent Cloud",
            "options": {
                "apiKey": "sk-xxx",
                "baseURL": "https://api.lkeap.cloud.tencent.com/v1"
            },
            "models": {
                "tencent-cloud/deepseek-v3.2": {
                    "id": "deepseek-v3.2",
                    "name": "Deepseek V3.2",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true,
                    "options": {
                        "thinking": {
                            "type": "enabled"
                        }
                    }
                }
            }
        },
        "custom-modelscope": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "ModelScope",
            "options": {
                "apiKey": "ms-xxx",
                "baseURL": "https://api-inference.modelscope.cn/v1"
            },
            "models": {
                "modelscope/qwen3.5": {
                    "id": "Qwen/Qwen3.5-397B-A17B",
                    "name": "Qwen3.5",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true
                },
                "modelscope/glm-5": {
                    "id": "ZhipuAI/GLM-5",
                    "name": "GLM 5",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true
                },
                "modelscope/deepseek-v3.2": {
                    "id": "deepseek-ai/DeepSeek-V3.2",
                    "name": "Deepseek V3.2",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true,
                    "options": {
                        "enable_thinking": true
                    }
                }
            }
        }
    }
}
