{
    "$schema": "https://opencode.ai/config.json",
    "autoupdate": false,
    "theme": "everforest",
    "plugin": [
        "@franlol/opencode-md-table-formatter@latest",
        "@tarquinen/opencode-dcp@latest",
        "cc-safety-net@latest"
    ],
    "permission": {
        "*": "allow",
        "edit": "ask",
        "bash": "ask",
        "external_directory": "ask",
        "doom_loop": "ask",
        "read": {
            "*": "allow",
            "*.crt": "deny",
            "*.key": "deny",
            "*.pem": "deny",
            "*.env": "deny",
            "*.env.*": "deny",
            "*.env.example": "allow"
        }
    },
    "agent": {
        "chat": {
            "description": "General chat agent.",
            "mode": "primary",
            "temperature": 0.7,
            "top_p": 0.9,
            "permission": {
                "*": "deny"
            },
            "prompt": "You are a smart, efficient AI assistant.\n\n**Core Guidelines:**\n1.  **Conciseness is Key:** Optimize your answers for a mobile screen. Be direct and avoid fluff.\n2.  **Format:** Use Markdown (Bold, Bullet points, Headers) heavily to make text scannable.\n3.  **Language:** Always reply in the language the user speaks (e.g., if User speaks Chinese, reply in Chinese).\n4.  **Accuracy:** If you don't know the answer, admit it. Do not hallucinate.\n\n**Capabilities:**\n- If asked to write code: Provide the code block immediately with a very brief explanation.\n- If asked for a plan: Use a numbered list.\n- If chatting: Be friendly but professional."
        }
    },
    "enabled_providers": [
        "github-copilot",
        "google",
        "custom-tencent-cloud",
        "custom-modelscope",
        "custom-nvidia"
    ],
    "provider": {
        "custom-tencent-cloud": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Tencent Cloud",
            "options": {
                "apiKey": "sk-xxx",
                "baseURL": "https://api.lkeap.cloud.tencent.com/v1"
            },
            "models": {
                "tencent-cloud/deepseek-v3.2": {
                    "id": "deepseek-v3.2",
                    "name": "Deepseek V3.2",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true,
                    "options": {
                        "thinking": {
                            "type": "enabled"
                        }
                    }
                }
            }
        },
        "custom-modelscope": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "ModelScope",
            "options": {
                "apiKey": "ms-xxx",
                "baseURL": "https://api-inference.modelscope.cn/v1"
            },
            "models": {
                "modelscope/glm-4.7": {
                    "id": "ZhipuAI/GLM-4.7",
                    "name": "GLM 4.7",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true,
                    "options": {
                        "enable_thinking": true
                    }
                },
                "modelscope/deepseek-v3.2": {
                    "id": "deepseek-ai/DeepSeek-V3.2",
                    "name": "Deepseek V3.2",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true,
                    "options": {
                        "enable_thinking": true
                    }
                },
                "modelscope/qwen3": {
                    "id": "Qwen/Qwen3-235B-A22B-Thinking-2507",
                    "name": "Qwen3",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true,
                    "options": {
                        "enable_thinking": true
                    }
                },
                "modelscope/qwen3-coder": {
                    "id": "Qwen/Qwen3-Coder-480B-A35B-Instruct",
                    "name": "Qwen3 Coder",
                    "reasoning": false,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true
                }
            }
        },
        "custom-nvidia": {
            "npm": "@ai-sdk/openai-compatible",
            "name": "Nvidia",
            "options": {
                "apiKey": "nvapi-xxx",
                "baseURL": "https://integrate.api.nvidia.com/v1"
            },
            "models": {
                "nvidia/glm4.7": {
                    "id": "z-ai/glm4.7",
                    "name": "GLM 4.7",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true,
                    "options": {
                        "chat_template_kwargs": {
                            "thinking": true
                        }
                    }
                },
                "nvidia/deepseek-v3.2": {
                    "id": "deepseek-ai/deepseek-v3.2",
                    "name": "Deepseek V3.2",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true,
                    "options": {
                        "chat_template_kwargs": {
                            "thinking": true
                        }
                    }
                },
                "nvidia/qwen3-235b-a22b": {
                    "id": "qwen/qwen3-235b-a22b",
                    "name": "Qwen3",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true,
                    "options": {
                        "chat_template_kwargs": {
                            "thinking": true
                        }
                    }
                },
                "nvidia/qwen3-coder-480b-a35b-instruct": {
                    "id": "qwen/qwen3-coder-480b-a35b-instruct",
                    "name": "Qwen3 Coder",
                    "reasoning": false,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true
                },
                "nvidia/minimax-m2.1": {
                    "id": "minimaxai/minimax-m2.1",
                    "name": "MiniMax M2.1",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true,
                    "options": {
                        "chat_template_kwargs": {
                            "thinking": true
                        }
                    }
                },
                "nvidia/kimi-k2.5": {
                    "id": "moonshotai/kimi-k2.5",
                    "name": "Kimi K2.5",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true,
                    "options": {
                        "chat_template_kwargs": {
                            "thinking": true
                        }
                    }
                },
                "nvidia/step-3.5-flash": {
                    "id": "stepfun-ai/step-3.5-flash",
                    "name": "Step 3.5 Flash",
                    "reasoning": true,
                    "tool_call": true,
                    "attachment": true,
                    "temperature": true
                }
            }
        }
    }
}
